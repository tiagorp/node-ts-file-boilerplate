{
  "name": "ts-file-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for node typescript single file program",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "ncc build ./src/index.ts -o dist --target es2021",
    "compile": "pkg ./src/index.ts -o ./dist/index",
    "clean": "rm ./dist/*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vercel/ncc": "^0.33.3",
    "pkg": "^5.5.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
